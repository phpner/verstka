      <script>
          $(document).ready(function(){
              //to attach

              function attachImg (){
                  var attImg = $(".historyCompany__row__bg");
                  var where =  $(".historyCompany__row__item__header .header__number.red");
                  var whereTop =  $(".historyCompany__row");
                  var imgLeft = parseInt(where.offset().left - whereTop.offset().left) - (attImg.width() / 2 + - 28) ;
                  var imgTop = parseInt(where.offset().top - whereTop.offset().top) - (attImg.width() / 2 +  -13)  ;

                  attImg.css({'left' : imgLeft,"top" : imgTop});
              }
              $( window ).on('resize',function(){
                  attachImg ()
              });

              attachImg ();

          });
      </script>
  {% endblock %}